#!/usr/bin/env bash

url=https://gist.githubusercontent.com/vinkla/033c01f665980dd53d9b/raw/fixers

run() {
    if [[ -f $1 ]]; then
        fixers=$(curl -s ${url})
        eval "php-cs-fixer ${fixers} fix $@"
	elif [[ -f .php_cs ]]; then
		eval "php-cs-fixer fix"
	else		
		fixers=$(curl -s ${url})
		eval "php-cs-fixer ${fixers} fix $@"
	fi
}

if [[ -z "$1" ]]; then
	run .
	exit 1
fi

for arg; do
	run ${arg}
done
