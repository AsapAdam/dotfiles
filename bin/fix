#!/usr/bin/env bash

url=https://gist.githubusercontent.com/vinkla/033c01f665980dd53d9b/raw/fixers

# Run the php-cs-fixer script.
run() {
	if [[ -f .php_cs ]]; then
		eval "php-cs-fixer --config=\".php_cs\" --allow-risky fix $*"
	else
		rules=$(curl -s ${url})
		eval "php-cs-fixer --allow-risky ${rules} fix $*"
	fi
}

if [[ -z "$1" ]]; then
	run .
	exit 1
fi

for arg; do
	run ${arg}
done
