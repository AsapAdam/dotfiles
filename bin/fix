#!/usr/bin/env bash

url=https://gist.githubusercontent.com/vinkla/033c01f665980dd53d9b/raw/73bc3bc722ca56eeed11da31694308ff122792d4/PHP%20CS%20Fixer
fixers=$(curl -s ${url})

echo ${fixers}

run() {
	php-cs-fixer ${fixers} "$@"
}

if [[ -z "$1" ]]; then
    run
	kill -INT $$
fi

for arg; do
	run ${arg}
done
