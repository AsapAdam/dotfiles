#!/usr/bin/env bash

print() { echo -e "\e[0;33m${1}\e[0m"; }

# Ask for the administrator password upfront
sudo -v

print 'Install OS X Software Updates...'
sudo softwareupdate -i -a

print 'Update NPM to the latest version...'
npm install -g npm@latest

print 'Update Composer...'
composer self-update

print 'Update global Composer libraries...'
composer global update --no-dev --prefer-dist

print 'Update Homebrew...'
brew update
brew upgrade

print 'Cleanup Homebrew Cache...'
brew cleanup --force -s
rm -rf /Library/Caches/Homebrew/*
brew doctor
