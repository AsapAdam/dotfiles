#!/usr/bin/env bash

log() { echo -e "\e[0;33m${1}\e[0m"; }

# Ask for the administrator password upfront.
sudo -v

log 'Update macOS software...'
sudo softwareupdate -i -a

log 'Update Homebrew binaries...'
brew update
brew upgrade
brew cleanup --force -s
rm -rfv $(brew --cache)/*
brew tap --repair
brew doctor

log 'Update Mac App Store applications...'
mas upgrade

log 'Update Composer...'
composer self-update
composer global update --no-dev --prefer-dist

log 'Update npm...'
npm install --global --quiet npm@latest

# Revoke sudo access again.
sudo -k
