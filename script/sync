#!/usr/bin/env bash

cd "$(dirname "${BASH_SOURCE}")"/..;

git pull origin master;

function setup() {
	rsync -avh ./home/ ~;
	source ~/.bash_profile;
	chflags hidden ~/bin;
}

if [ "${1}" == "--force" -o "${1}" == "-f" ]; then
	setup;
else
	read -p "This may overwrite existing files in your home directory. Are you sure? (y/n) " -n 1;
	echo "";
	if [[ ${REPLY} =~ ^[Yy]$ ]]; then
		setup;
	fi;
fi;
unset setup;
