#!/usr/bin/env bash

# Easier navigation.
alias ..="cd .."
alias ...="cd ../.."

# Shortcuts.
alias g="hub"
alias h="history"
alias vi="vim"

# PHP aliases.
alias art="php artisan"
alias phpunit="vendor/bin/phpunit"

# List all files in long format, including dotfiles.
alias l="ls -Glah"

# Always enable colored `grep` output.
alias grep="grep --color=auto"
